<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <EditText
        android:id="@+id/usernameEntry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:autofillHints="username"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/passwordEntry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/passwordEntry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:autofillHints="password"
        android:ems="10"
        android:hint="@string/pwd"
        android:importantForAutofill="yes"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/usernameEntry"
        app:layout_constraintBottom_toTopOf="@id/reenter_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/reenter_password"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:autofillHints="password"
        android:ems="10"
        android:hint="@string/reenter_pwd"
        android:importantForAutofill="yes"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/passwordEntry"
        app:layout_constraintBottom_toTopOf="@id/signInEntry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInEntry"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:background="@drawable/custom_button"
        android:textColor="@color/black"
        android:text="@string/signInText"
        android:textAllCaps="false"
        app:cornerRadius="3dp"
        app:layout_constraintTop_toBottomOf="@id/reenter_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
